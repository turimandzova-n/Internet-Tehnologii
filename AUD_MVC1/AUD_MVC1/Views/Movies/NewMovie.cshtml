@model AUD_MVC1.Models.Movie
@{
    ViewBag.Title = "NewMovie";
}

<h2>Add a new movie</h2>

@using (Html.BeginForm("InsertNewMovie", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name);
        @Html.TextBoxFor(m => m.Name, new { @class = "form-controll" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Rating);
        @Html.TextBoxFor(m => m.Rating, new { @class = "form-controll", type="number"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DownloadURL);
        @Html.TextBoxFor(m => m.DownloadURL, new { @class = "form-controll" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ImageURL);
        @Html.TextBoxFor(m => m.ImageURL, new { @class = "form-controll" })
    </div>
   
    <button type="submit" class="btn btn-primary">Save</button>

}


