@model List<AUD_MVC1.Models.Movie>
@{
    ViewBag.Title = "GetAllMovies";
}

<h2>GetAllMovies</h2>

<ul>
    @{
        int i = 0;
        foreach(var movie in Model)
            {
                <li>
                        <h4>
                            <img src="@movie.ImageURL" />
                            @Html.ActionLink(movie.Name, "ShowMovie", new { id = i })
                            @Html.ActionLink("Edit", "Edit", new { id = i })
                            @Html.ActionLink("Delete", "DeleteMovie", new { id = i })
                        </h4>
                </li>
            i++;
        }

     }
</ul>